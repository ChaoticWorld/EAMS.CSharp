@{
    ViewBag.Title = "test";
}

<h2>服务测试</h2>

<div>
    <p>向服务器更新本地外网IP</p>
    <input type="text" id="vpnKEY" value="" /> 
    <input type="text" id="vpnIP" value="" /> 
    <button onclick="RegisterIP()">注册最新IP地址</button>
</div>
<hr />
<div>
    <p>获得指定VPN的最新IP地址,</p>
    <p id="getIP"></p>
    <input type="text" id="getVpnKEY" value="" /> 
    <button onclick="getIP()">获得最新IP地址</button>
</div>
<script type="text/javascript">
    function RegisterIP() {
        var key = $("#vpnKEY").val();
        var ip = $("#vpnIP").val();
        $.post("/Default/RegisterIP", { Key: key, ip: ip }, function (msg) {
            alert(msg);
        })
    }
</script>
<script type="text/javascript">
    function getIP() {
        var key = $("#getVpnKEY").val();
        $.post("/Default/getIP/1",
            { Keys: key },
            function (msg) {
                var ipMsg = "数量:";
                ipMsg += msg.length;
                ipMsg += ";<br/>";
                $(msg).each(function () {
                    ipMsg += this.Name;
                    ipMsg += ",";
                    ipMsg += this.vpnIP;
                    ipMsg += ".<br/>";
                })
                $("#getIP").html(ipMsg);
            });
    }
</script>