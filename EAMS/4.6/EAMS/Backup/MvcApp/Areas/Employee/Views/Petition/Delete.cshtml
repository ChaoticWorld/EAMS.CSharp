    <div>@if ((bool)TempData["canDelete"])
         {  @*@Html.ActionLink("确认删除", "sureMainDelete", new { id = TempData["ID"].ToString() })*@
            <input type="button" value="确认删除" title='@TempData["ID"].ToString()' id="sureDelete" />
         }
     <br />
    @Html.ActionLink("返回", "Index", new { }, new { id="return"})
