       <script type="text/javascript">
       $("#sureDelete").on("click",function () {
               var url = "/Employee/Petition/sureMainDelete/" + $(this).attr("title");               
               $.get(url, function (date) {
                   alert("删除签呈内容记录："+date.di+"条;\n删除签呈"+date.mi+"条.");
                   $("#return")[0].click();
               });
           });
       </script>