@using Webdiyer.WebControls.Mvc
@using strategyLib
@model MvcApp.Areas.Employee.Models.strategyEditModel
@{
    ViewBag.Title = "strategyDetails";
}
<div>
    <table id="detailsTable">
        <thead>
