                var rows = table.rows;
                var row = null;
                var name2 = '';
                var name = '';
                var startidx = 0;
                for (var j = 1; j < table.rows.length; j++) {
                    row = table.rows[j];
                    //整理提交名称（系统生成sumbitName属性）的数组号
                    for (var i = 0; i < row.cells.length; i++) {
                        $(row.cells[i].children).each(function () {
                            name2 = this.name;
                            //alert(name2);
                            if (name2) {
                                //alert(j + "(name2):" + name2);
                                startidx = name2.indexOf("].") + 2;
                                if (name.indexOf("[") > -1)
                                    name = "[" + (j - 1) + "]." + name2.substr(startidx, name2.length - startidx);
                                else name = name2;
                                //alert('new name : ' + name);
                                this.name = name;
                                //if (!this.submitName)
                                //    $(this).attr("submitName", name);
                            }
                        });
                    }
                    //整理条目类别数据格式
                    clearTable(row);
                }
            }
            function AddRow() {
                var table = $("table#grid")[0];
                var rcount = table.rows.length;
                var row0 = table.rows[1];
