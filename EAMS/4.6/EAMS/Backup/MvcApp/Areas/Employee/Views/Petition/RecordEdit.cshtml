                $(newrow).removeAttr('style');
//                for (var i = 1; i < newrow.cells.length; i++) {
//                    $(newrow.cells[i].children[0]).attr('value', rcount - 1);
//                }
                $(table).append(newrow);
                repairCallAttrName();
            }
