        var row = $(c).parent().parent();
        var tds = $(row).prev().children("td");
        var bInv = $(row).children("td").eq(1).children("input").first().val();
        if (bInv != "")
            $(tds).eq(1).attr("title", "有配比项");
        else
            $(tds).eq(1).attr("title", "");
        $(row).css("display", "none");
        $(row).prev().children("td").first().attr("rowspan", "1");
    }
</script>
