            //            var mail = /^[\w-]+(\.[\w-]+)*@@([\w-]+\.)+[a-zA-Z]+$/;
            //            if (mobile.test(key)) {
            //                $("#mobile").val(key);
            //            } else if (mail.test(key)) {
            //                $("#mail").val(key);
            //            } else { $("#code").val(key); }
            return true;
        }
        else return false;
    }
</script>
